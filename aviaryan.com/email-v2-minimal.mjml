<mjml>
  <mj-head>
    <mj-style>
      /* email overflows without this */
      img {
        max-width: 100%;
        height: auto;
      }
      .body {
        width: 100%;
        max-width: 750px;
      }
      /* media queries at the end */
      @media all and (max-width: 600px) {
        /* less padding on mobile */
        .letter-content {
          padding: 12px 12px !important;
        }
      }
    </mj-style>
  </mj-head>
  <mj-body width="100%">

    <!-- content -->
    <mj-section full-width="full-width" text-align="left">
      <mj-column css-class="body">
        <mj-text font-size="15px" line-height="17px" css-class="letter-content">
          <p>XYZ is placeholder text commonly used in the graphic, print, and publishing industries for previewing layouts and visual mockups. XYZ is placeholder text commonly used in the graphic, print, and publishing industries for previewing layouts and visual mockups.</p>
          <p>Body goes here</p>
          <p>Body goes here</p>
          <p>Body goes here</p>
          <p>Body goes here</p>
          <p>Body goes here</p>
          <p>Body goes here</p>
          <p>Body goes here</p>
        </mj-text>
        <!-- static -->
        <!-- notes: providing link white color because gmail shows blue -->
        <mj-spacer height="24px" />
        <mj-divider border-width="1px" border-color="#c6c6c6"></mj-divider>
        <mj-text color="#a9a9a9">
          Have suggestions or need help with anything? Hit reply.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- hidden rewards url
    <a href="{{RewardsURL}}">EmailOctopus</a> -->

    <mj-section text-align="center">
      <mj-column>
        <!-- unsub -->
        <mj-text align="center">
          You received this email because you subscribed to my list. You can <a href="{{UnsubscribeURL}}" style="text-decoration:underline;" target="_blank">unsubscribe</a> anytime.
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
